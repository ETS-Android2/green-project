<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        style="@style/rlProductionLine"
        android:id="@+id/rlProductionLineStatus"
        android:background="@drawable/rect_white_shadow"
        android:elevation="5dp">

        <ImageView
            style="@style/ivProductionLineIcon"
            android:id="@+id/ivProdLineIcon"
            android:src="@drawable/production_line" />

        <TextView
            style="@style/tvProductionLineTitle"
            android:id="@+id/tvProductionLine"
            android:layout_toRightOf="@id/ivProdLineIcon"
            android:text="Production Line 1" />

        <ImageView
            style="@style/ivProductionLinePanelIcons"
            android:id="@+id/ivIpAddressIcon"
            android:src="@drawable/ip_address"
            android:layout_below="@+id/ivProdLineIcon"/>

        <TextView
            style="@style/tvProductionLinePanelText"
            android:id="@+id/tvIpAddress"
            android:layout_toRightOf="@id/ivIpAddressIcon"
            android:layout_below="@+id/ivProdLineIcon"
            android:text="192.168.1.2" />

        <ImageView
            style="@style/ivProductionLinePanelIcons"
            android:id="@+id/ivLastUpdateIcon"
            android:layout_below="@id/ivIpAddressIcon"
            android:src="@drawable/last_update" />

        <TextView
            style="@style/tvProductionLinePanelText"
            android:id="@+id/tvLastUpdate"
            android:layout_below="@id/tvIpAddress"
            android:layout_toRightOf="@id/ivLastUpdateIcon"
            android:text="07-07-2021 10:14" />

        <ImageView
            style="@style/ivProductionLinePanelIcons"
            android:id="@+id/ivStatusIcon"
            android:layout_below="@id/ivLastUpdateIcon"
            android:src="@drawable/online" />

        <TextView
            style="@style/tvProductionLinePanelText"
            android:id="@+id/tvStatus"
            android:layout_below="@id/tvLastUpdate"
            android:layout_toRightOf="@id/ivStatusIcon"
            android:text="Online" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlTemperature"
        android:layout_below="@+id/rlProductionLineStatus"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.anychart.anychart.AnyChartView
            android:id="@+id/chTemperature"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlHumidity"
        android:layout_below="@+id/rlTemperature"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.anychart.anychart.AnyChartView
                android:id="@+id/any_chart_temperature"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</RelativeLayout>