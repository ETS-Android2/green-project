<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/gray_100">

    <RelativeLayout
        style="@style/inspection_results_layout"
        android:id="@+id/rlProductionLines"
        android:background="@drawable/rect_green_shadow">

        <ImageView
            style="@style/fruit_icons"
            android:id="@+id/ivFruitIcon"
            android:src="@drawable/bananas" />

        <TextView
            style="@style/fruit_title"
            android:id="@+id/tvFruitName"
            android:layout_toRightOf="@id/ivFruitIcon"
            android:text="Bananas" />

        <com.anychart.anychart.AnyChartView
            android:layout_marginHorizontal="10dp"
            android:layout_toRightOf="@id/tvFruitName"
            android:id="@+id/chRadial"
            android:layout_width="40dp"
            android:layout_height="30dp"/>

        <TextView
            style="@style/fruit_inspection_left"
            android:id="@+id/tvRejectedFruitsLabel"
            android:layout_below="@+id/tvFruitName"
            android:text="Rejected: " />

        <TextView
            style="@style/fruit_inspection_left"
            android:id="@+id/tvRejectedFruitsValue"
            android:layout_below="@+id/tvFruitName"
            android:layout_toRightOf="@+id/tvRejectedFruitsLabel"
            android:text="24 pz" />

        <TextView
            style="@style/fruit_inspection_left"
            android:id="@+id/tvAcceptedFruitsLabel"
            android:layout_below="@+id/tvFruitName"
            android:layout_toRightOf="@+id/tvRejectedFruitsValue"
            android:text="Accepted: " />

        <TextView
            style="@style/fruit_inspection_left"
            android:id="@+id/tvAcceptedFruitsValue"
            android:layout_below="@+id/tvFruitName"
            android:layout_toRightOf="@+id/tvAcceptedFruitsLabel"
            android:text="50 pz" />

    </RelativeLayout>

</RelativeLayout>